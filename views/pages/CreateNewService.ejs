    <style>
        .alert {
            padding: 20px;
            background-color: #f44336;
            color: white;
            opacity: 1;
            transition: opacity 0.6s;
            margin-bottom: 15px;
        }

        .alert.success {
            background-color: #4CAF50;
        }

        .alert.info {
            background-color: #2196F3;
        }

        .alert.warning {
            background-color: #ff9800;
        }

        .closebtn {
            margin-left: 15px;
            color: white;
            font-weight: bold;
            float: right;
            font-size: 22px;
            line-height: 20px;
            cursor: pointer;
            transition: 0.3s;
        }

        .closebtn:hover {
            color: black;
        }

    </style>
</head>


<style>
    .myAlert-top {
        position: fixed;
        top: 5px;
        left: 15%;
        width: 80%;
    }

    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

</style>


<% if(locals.notif){ %>
<% if(notif.goodStatus == 1) {%>
<div class="alert success">
    <span class="closebtn">&times;</span>
    <%= notif.msg %>
</div>
<%}else{%>
<div class="alert">
    <span class="closebtn">&times;</span>
    <%= notif.msg %>
</div>
<%}%>
    <%}%>

<body class="nav-md" style="background-color:#D8345F;">
    <div class="container body">
        <div class="main_container" style="background-color: #D8345F;">

            <!-- page content -->
            <div class="right_col" role="main" style="background-color: #202040">
                <div class="">
                    <div class="page-title">
                        <div class="title_left">

                            <h3 style="color: #FFBD69;">Create New Services</h3>

                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel" style="background-color: #543846; border-color: #543846;  border-radius: 8px;">
                            <div class="x_content">
                                <br />
                                <form id="new-services-form" data-parsley-validate class="form-horizontal form-label-left">

                                    <div class="form-group">
                                        <label style="color: #dddddd;" class="control-label col-md-3 col-sm-3 col-xs-12" for="service-name">Service Name: <span class="required">*</span>
                                        </label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <!--First name Input field-->
                                            <input type="text" id="service-name" name="servicename" required="required" class="form-control col-md-7 col-xs-12" placeholder="Service name">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label style="color: #dddddd;" class="control-label col-md-3 col-sm-3 col-xs-12" for="service-description">Service Description: <span class="required">*</span>
                                        </label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <!--Last name input field-->
                                            <input type="text" id="service-description" name="serviceDescription" required="required" class="form-control col-md-7 col-xs-12" placeholder="Enter Description of the Service">
                                        </div>
                                    </div>


                                    <!--options list of position-->
                                    <div class="form-group">
                                        <label style="color: #dddddd;" class="control-label col-md-3 col-sm-3 col-xs-12">Select Possible Configurations: </label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <select class="form-control" id="config" name="role">
                                                <option value="-1">Pick Configuration/s</option>

                                                <option value="Application and Requirements">Application and Requirements</option>
                                                <option value="Approving Official">Approving Official</option>
                                                <option value="e-Document Generation">e-Document Generation</option>
                                                <option value="e-ID">e-ID</option>
                                                <option value="e-Payment">e-Payment</option>
                                                <option value="e-Receipt">e-Receipt</option>
                                                <option value="Fund Distribution">Fund Distribution</option>
                                                <option value="Goods Distribution">Goods Distribution</option>
                                                <option value="Receipt of Service">Receipt of Service (Contact Services) through QR Code Scanning</option>
                                                <option value="Recommending Official">Recommending Official</option>
                                                <option value="Staff in-charge">Staff in-charge</option>


                                            </select>
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                            
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>




            </div>
        </div>
    </div>
    
    

