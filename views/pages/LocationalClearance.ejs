    <style>
        .alert {
            padding: 20px;
            background-color: #f44336;
            color: white;
            opacity: 1;
            transition: opacity 0.6s;
            margin-bottom: 15px;
        }

        .alert.success {
            background-color: #4CAF50;
        }

        .alert.info {
            background-color: #2196F3;
        }

        .alert.warning {
            background-color: #ff9800;
        }

        .closebtn {
            margin-left: 15px;
            color: white;
            font-weight: bold;
            float: right;
            font-size: 22px;
            line-height: 20px;
            cursor: pointer;
            transition: 0.3s;
        }

        .closebtn:hover {
            color: black;
        }

    </style>

</head>

<body>


    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel" style="background-color: #543846; border-color: #543846 border-radius: 8px;">
                <div class="x_content">
                    <form id="form" data-parsley-validate class="form-horizontal form-label-left">
                        <h1 style="color: white;">Appplication for Local Clearance Form</h1>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend ">
                                <label style="color: #dddddd;" class=" control-label col-md-3 col-sm-3 col-xs-12" for="bname">Business Name/Trade Name:
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input required type="text" id="bname" name="bname" class="form-control" placeholder="Business Name">
                                </div>

                            </div>
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend ">
                                <label style="color: #dddddd;" class=" control-label col-md-3 col-sm-3 col-xs-12" for="nature">Nature of Business Activity
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input required type="text" id="nature" name="nature" class="form-control" placeholder="">
                                </div>

                            </div>
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label style="color: #dddddd;" class=" control-label col-md-3 col-sm-3 col-xs-12" for="location">Business Location:
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input required type="text" id="location" name="location" class="form-control" placeholder="">
                                </div>
                            </div>
                        </div>

                        <h2 style="color: white;">Project Owner/Applicant</h2>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label style="color: #dddddd;" class=" control-label col-md-3 col-sm-3 col-xs-12" for="nmame">Applicant Name:
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input required type="text" id="name" name="name" class="form-control" placeholder="">
                                </div>
                            </div>
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label style="color: #dddddd;" class=" control-label col-md-3 col-sm-3 col-xs-12" for="address">Applicant Address:
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input required type="text" id="address" name="address" class="form-control" placeholder="">
                                </div>
                            </div>
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label style="color: #dddddd;" class=" control-label col-md-3 col-sm-3 col-xs-12" for="rep">Authorized Representative:
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input required type="text" id="rep" name="rep" class="form-control" placeholder="">
                                </div>
                            </div>
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label style="color: #dddddd;" class=" control-label col-md-3 col-sm-3 col-xs-12" for="position">Gender:
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">

                                    <select class="form-control" name="sex" id="sex" aria-placeholder="Specify Sex">
                                        <option value="-1">Specify Sex</option>
                                        <option value="M">Male</option>
                                        <option value="F">Female</option>

                                    </select>
                                </div>

                            </div>
                        </div>

                        <h2 style="color: white;">Nature of Appplication</h2>
                        <div>
                            <div>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <select class="form-control" id="appnature" name="appnature" size="5">


                                        <option value="0">Nature of Application</option>
                                        <option value="1">New Application</option>
                                        <option value="2">Reconstruction</option>
                                        <option value="e-ID">Others</option>


                                    </select>
                                </div>
                            </div>
                        </div>


                        <h2 style="color: white;">Building Description</h2>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label style="color: #dddddd;" class=" control-label col-md-3 col-sm-3 col-xs-12" for="unitno">No. of Units:
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input required type="text" id="unitno" name="unitno" class="form-control" placeholder="">
                                </div>
                            </div>
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label style="color: #dddddd;" class=" control-label col-md-3 col-sm-3 col-xs-12" for="floorno">No. of Storey/Floors:
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input required type="text" id="floorno" name="floorno" class="form-control" placeholder="">
                                </div>
                            </div>
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label style="color: #dddddd;" class=" control-label col-md-3 col-sm-3 col-xs-12" for="lotarea">Lot Area:
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input required type="text" id="lotarea" name="lotarea" class="form-control" placeholder="">
                                </div>
                            </div>
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label style="color: #dddddd;" class=" control-label col-md-3 col-sm-3 col-xs-12" for="totalarea">Total Floor Area of Building:
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input required type="text" id="totalarea" name="totalarea" class="form-control" placeholder="">
                                </div>
                            </div>
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label style="color: #dddddd;" class=" control-label col-md-3 col-sm-3 col-xs-12" for="floorarea">Floor Area of Business:
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input required type="text" id="floorarea" name="floorarea" class="form-control" placeholder="">
                                </div>
                            </div>
                        </div>

                        <h2 style="color: white;">Capitalization</h2>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label style="color: #dddddd;" class=" control-label col-md-3 col-sm-3 col-xs-12" for="floorarea">Capitalization:
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input required type="text" id="cap" name="cap" class="form-control" placeholder="">
                                </div>
                            </div>
                        </div>

                        <h2 style="color: white;">No. of Employees</h2>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label style="color: #dddddd;" class=" control-label col-md-3 col-sm-3 col-xs-12" for="memp">Male:
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input required type="text" id="memp" name="memp" class="form-control" placeholder="">
                                </div>
                            </div>
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label style="color: #dddddd;" class=" control-label col-md-3 col-sm-3 col-xs-12" for="femp">Female:
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input required type="text" id="femp" name="femp" class="form-control" placeholder="">
                                </div>
                            </div>
                        </div>

                        <h2 style="color: white;">Right Over Land</h2>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label style="color: #dddddd;" class=" control-label col-md-3 col-sm-3 col-xs-12" for="owner">Owner:
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input required type="text" id="owner" name="owner" class="form-control" placeholder="">
                                </div>
                            </div>
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label style="color: #dddddd;" class=" control-label col-md-3 col-sm-3 col-xs-12" for="lease">Lease:
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input required type="text" id="lease" name="lease" class="form-control" placeholder="">
                                </div>
                            </div>
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label style="color: #dddddd;" class=" control-label col-md-3 col-sm-3 col-xs-12" for="leaserate">Lease Rate per sq.m.:
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input required type="text" id="leaserate" name="leaserate" class="form-control" placeholder="">
                                </div>
                            </div>
                        </div>



                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <div class="ol-md-6 col-sm-6 col-xs-12 col-md-offset-5">
                                    <button type="submit" onclick="signUp()" class="btn btn-rimary" style="background-color: #2196F3; color: white;">Submit</button>
                                    <button onclick="goBack()" class="btn btn-rimary" style="background-color: #2196F3; color: white;">Go Back</button>

                                </div>
                            </div>

                        </div>


                    </form>
                </div>

            </div>
        </div>




    </div>


    <script>
        function goBack() {
            window.history.back();
        }

    </script>

